{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "java -Xmx512m -Dserver.port=$PORT -Dspring.profiles.active=production -Dmanagement.server.port=$PORT -jar app.jar",
    "replicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "healthcheck": {
    "path": "/actuator/health",
    "port": "$PORT",
    "timeout": "30s",
    "interval": "10s",
    "retries": 5
  }
}